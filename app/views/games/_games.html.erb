<h1>Listing games</h1>

<% if !@games.empty? %>

<table>
  <tr>
    <th>Date and time</th>
    <th>Played</th>
    <th colspan="3" class="actions">Actions</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.date %> (<%=h game.time %>)</td>
    <td><%=h game.played %></td>
    <% if game.played %>
      <td><%= link_to 'Select players', select_players_game_path(game) %></td>
      <td><%= link_to 'Select trophies', select_trophies_game_path(game) %></td>
      <td><%= link_to 'Select players for trophies', game_trophy_games_path(game) %></td>
    <% else %>
      <td colspan="2"><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

  <% else %>
    <p>There is no games. <%= link_to "Add the first!", new_game_path %></p>

<% end %>
